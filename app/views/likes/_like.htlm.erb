<% if !Like.exists?(user_id: current_user.id, record_id: record.id) %>
  <%= link_to record_likes_path(record.id), method: :post, remote: true, class:"like-btn" do %>
    <i class="fas fa-star star-icon1"></i>
  <% end %>
  <span class="star-count1"><%= record.likes.count %></span>
<% else %>
  <%= link_to record_like_path(record_id: record.id, id: record.likes[0].id), method: :delete, remote: true, class:"like-btn" do %>
    <i class="fas fa-star star-icon2"></i>
  <% end %>
  <span class="star-count2"><%= record.likes.count %></span>
<% end %>